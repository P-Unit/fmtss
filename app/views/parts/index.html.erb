<h1>Florida Machine Tools Supplies &amp; Services</h1>

<table class="table table-striped">
  <tr>
    <th>Item</th>
    <th>Quantity</th>
    <th>Description</th>
    <th>Part Number</th>
    <th>OEM Part Number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @parts.each do |part| %>
  <tr>
    <td><%= part.item %></td>
    <td><%= part.quantity %></td>
    <td><%= part.description %></td>
    <td><%= part.part_number %></td>
    <td><%= part.oem_part_number %></td>
    <td><%= link_to 'Show', part %></td>
    <td><%= link_to 'Edit', edit_part_path(part) %></td>
    <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add New Part', new_part_path, :class => 'btn btn-success' %>
